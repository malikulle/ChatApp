<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChatApp</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar">
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Chat" asp-action="Find">Find</a>
        <a asp-controller="Account" asp-action="Logout">Logout</a>
    </div>
    <div class="main">
        @if (User.Identity.IsAuthenticated)
        {
            @await Component.InvokeAsync("Rooms")
        }
        <div class="chat">
            @RenderBody()

        </div>
        <div class="modal" id="create-room-modal">
            <form asp-controller="Home" asp-action="CreateRoom" method="post" class="modal-body">
                <button type="button" class="close" id="close-modal-btn">X</button>
                <header>Create Room</header>
                <div>
                    <input type="text" name="name" />
                </div>
                <footer>
                    <button>Create</button>
                </footer>

            </form>
        </div>
    </div>
    <script src="~/js/site.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>

    @RenderSection("Scripts", false)
</body>
</html>
